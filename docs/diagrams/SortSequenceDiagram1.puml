@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":ExpenseBookParser" as ExpenseBookParser LOGIC_COLOR
participant ":SortCommandParser" as SortCommandParser LOGIC_COLOR
participant "c:Comparator<Expense>" as ExpenseComparator LOGIC_COLOR
participant "s:SortCommand" as SortCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box
[-> LogicManager : execute(sort)
activate LogicManager

LogicManager -> ExpenseBookParser : parseCommand(sort)
activate ExpenseBookParser

ExpenseBookParser -> SortCommandParser : parse(sort)
activate SortCommandParser

create ExpenseComparator
SortCommandParser -> ExpenseComparator
activate ExpenseComparator

ExpenseComparator --> SortCommandParser
deactivate ExpenseComparator

create SortCommand
SortCommandParser -> SortCommand
activate SortCommand

SortCommand --> SortCommandParser
deactivate SortCommand

SortCommandParser --> ExpenseBookParser
deactivate SortCommandParser

ExpenseBookParser --> LogicManager : s
deactivate ExpenseBookParser

LogicManager -> SortCommand : execute()
activate SortCommand

SortCommand -> Model : sortExpenses(c)
activate Model


Model --> SortCommand
deactivate Model

SortCommand --> LogicManager : result
deactivate SortCommand
SortCommand -[hidden]-> LogicManager : result
destroy SortCommand
destroy ExpenseComparator

[<--LogicManager
deactivate LogicManager
@enduml
